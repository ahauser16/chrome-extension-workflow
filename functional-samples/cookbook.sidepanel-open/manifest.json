{
  "manifest_version": 3,
  "name": "NYS E-Signature Notary Services",
  "version": "1.0",
  "description": "This extension is meant to aid NYS Notaries in their daily workflow.",
  "minimum_chrome_version": "116",
  "background": {
    "service_worker": "service-worker.js"
  },
  "side_panel": {
    "default_path": "sidepanel-global.html"
  },
  "content_scripts": [
    {
      "js": [
        "content-script.js"
      ],
      "matches": [
        "https://www.google.com/*",
        "https://dos.ny.gov/*"
      ]
    }
  ],
  "permissions": [
    "sidePanel",
    "contextMenus"
  ],
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  }
}