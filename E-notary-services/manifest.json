{
  "manifest_version": 3,
  "name": "NYS E-Signature Notary Services",
  "version": "1.0",
  "description": "This extension is meant to aid NYS Notaries in their daily workflow.",
  "host_permissions": [
    "https://*.meet.google.com/*"
  ],
  "permissions": [
    "sidePanel",
    "contextMenus",
    "storage",
    "tabs"
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.meet.google.com/*"
      ],
      "js": [
        "content-script.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/bookmark.png",
        "assets/play.png",
        "assets/delete.png",
        "assets/save.png"
      ],
      "matches": [
        "https://*.meet.google.com/*"
      ]
    }
  ],
  "action": {
    "default_icon": {
      "16": "images/icon-16.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    },
    "default_title": "E-Notary Services",
    "default_popup": "popup.html"
  }
}